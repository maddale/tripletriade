<div class="col-4">
	<div class="user-pic">
		<img src="/assets/default-user-image.png" alt="">
	</div>
</div>

<div class="col-8">
	<div class="show-name">
		<h2><%= @user.name %></h2>
	</div>
	<div class="show-info">
		<%= form_for @user do |f| %>

		<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, placeholder: 'Имя, Фамилия', class: "form-control" %>
		</div>

		<div class="form-group">
		<%= f.label :nickname %>
		<%= f.text_field :nickname, placeholder: 'Ник', class: "form-control" %>
		</div>

		<div class="form-group">
		<%= f.label :email %>
		<%= f.text_field :email, placeholder: 'email', class: "form-control" %>
		</div>

		<div class="form-group">
		<%= f.label :age %>
		<%= f.text_field :age, placeholder: 'Возраст', class: "form-control" %>
		</div>

		<%= f.label :sex %>
		<div class="form-check">
		<%= f.radio_button :sex, 'male', class: "form-check-input" %>
		<%= f.label :sex_male, 'male', class: "form-check-label" %>
		</div>
		<div class="form-check">
		<%= f.radio_button :sex, 'female', class: "form-check-input" %>
		<%= f.label :sex_female, 'female', class: "form-check-label" %>
		</div>

		<div class="form-group">
		<%= f.label :avatar %>
		<%= f.file_field :avatar, placeholder: 'choose a pic', class: "form-control" %>
		</div>


		<%= f.submit 'Редактировать', class: "btn btn-success" %>
		<% end %>
		
	</div>
</div>